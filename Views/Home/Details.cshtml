@model Employee

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/Images/" + (Model.PhotoUrl ?? "noImage.jpg");
}



    <div>
        <h4>Employee</h4>
       

        <div class="card-deck">

                <div class="card m-3">
                    <div class="card-header">@Model.Name</div>
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                    <h4>@Model.Deparment</h4>
                    <h4>@Model.Email</h4>
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="index"  class="btn btn-primary">Back</a>

                        <a asp-controller="home" asp-action="edit" asp-route-id="@Model.EmpId" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>

                </div>

            
        </div>
   
    </div>

